1.	Программа
1.1.	 Текст программы
#include <iostream>
using namespace std;
int main() 
{
	int i;//Создание переменной – счетчика количества разрядов (1-10)
	int j;//Создание переменной – счетчика количества разрядов (1-10)
	int d;//Переменная, принимающая значения i*j
	int cin1;//Переменная,принимающая значение введеное с клавиатуры
	int cin2;//Переменная,принимающая значение введеное с клавиатуры
	for (i = 1; i < 11; )
	{
		cout << i << "\t";// создание первого разряда (чтобы было красиво)
		for (j = 1; j < 11; ) 
		{
			d = i * j;//Создание значения в таблице умножения
			cout << hex << d << "\t";//
			j++;
		}
		cout << endl;
		i++;
	}
	cout << "1.(10) ";
	cin >> cin1 ;//Присваивание значения введеного с клавиатуры пременной cin1
	cout << "1.(16) " << hex << cin1 << "\n";
	cout << "2.(10) ";
	cin >> cin2;// Присваивание значения введеного с клавиатуры пременной cin2
	cout << "2.(16) " << hex << cin2 << "\n";
}
